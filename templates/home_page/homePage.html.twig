{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #9de4bfff; padding: 2px 6px; }
</style>

<body>
<div class="row">
    <div>
     {#Affichage d'un message flash#}
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
    </div> 
    <div>
        <h2 class="accueil text-secondary ">Hello, Bienvenue ! </h2>
    </div>

    <div>
        <a href="{{path('app_login')}}">Connexion</a>
    </div>

        {% if app.user == false %}
            <a href="{{path('app_register')}}">S'inscrire</a>
        {% else %}
            <div>
                <a href="{{path('app_logout')}}">Deconnexion</a>
            </div>
        {% endif %}
        {% if is_granted("ROLE_ADMIN") %}    
            <div>
                <a href="{{path('app_adminHomePage')}}">AdminHomePage</a>
            </div>
        {% endif %}
         {% if is_granted("ROLE_USER") %}    
            <div>
                <a href="{{path('app_userHomePage')}}">UserHomePage</a>
            </div>
        {% endif %}

</div>
    
</body>

    
{% endblock %}
