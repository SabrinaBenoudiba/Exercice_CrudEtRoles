{% extends 'base.html.twig' %}

{% block title %}Hello ! Bienvenue sur notre site!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
    {#Affichage d'un message flash#}
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
</div>
<div class="example-wrapper">
    <h1 class="title h1 mb-5 text-secondary">Hello ! Bienvenue sur votre Profil !</h1>
</div>

 <div class="form-block">
    <div class="card" style="width: 18rem;">
        <img src="https://static.wikia.nocookie.net/naruto/images/c/cd/Sakura_partie_2.jpg/revision/latest?cb=20150312215407&path-prefix=fr" class="card-img-top" alt="...">
    <div class="card-body">
        {% if datas is defined %}   
            <P>{{ (app.user.Nom ) }}</P>
            <P>{{ (app.user.Prenom) }}</P>
            <P>{{ (app.user.Email) }}</P>
            <a href="{{ path('app_update',{'id': app.user.id}) }}" class="btn btn-warning">Modifier</a>
        {% endif %}
</div>

{% endblock %}
