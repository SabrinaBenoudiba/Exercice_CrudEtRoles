{% extends 'base.html.twig' %}

{% block title %}Hello ! Bienvenue sur notre site!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
    {#Affichage d'un message flash#}
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
</div>

<div class="example-wrapper">
    <h1>Hello ! Bienvenue sur votre Profil !</h1>
</div>

<div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
    
        <tbody>
        {% if datas is defined %}
                <tr>
                    <td>{{ (app.user.Nom ) }}</td>
                    <td>{{ (app.user.Prenom) }}</td>
                    <td>{{ (app.user.Email) }}</td>
                    <td>
                        <a href="{{ path('app_update',{'id': app.user.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
        {% endif %}
        </tbody>
    </table> 
</div>
{% endblock %}
