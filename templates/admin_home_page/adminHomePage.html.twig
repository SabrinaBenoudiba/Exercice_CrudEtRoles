{% extends 'base.html.twig' %}

{% block title %}Hello ! Bienvenue sur notre site!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="row">
    {#Affichage d'un message flash#}
        {% for message in app.flashes('notice')%}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
</div>

<div class="example-wrapper">
    <h1 class ="title h1 mb-5 text-secondary">Hello ! Bienvenue sur notre site !</h1>
</div>

<div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
    
        <tbody>
        {% for data in datas %}
            <tr>
                {# <th scope="row">{{data.id}}</th> #}
                <td>{{data.nom}}</td>
                <td>{{data.prenom}}</td>
                <td>{{data.email}}</td>
                <td>
                    <a href="{{ path('app_update_admin',{'id': data.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_delete_admin',{'id': data.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
</div>
<div>
    <button> <a href="{{path('app_logout')}}">Deconnexion</a> </button>
</div>
{% endblock %}

